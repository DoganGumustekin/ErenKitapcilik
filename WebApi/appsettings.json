{
  //JWT
  "TokenOptions": {
    "Audience": "ErenKitapcilik@eren.com",
    "Issuer": "ErenKitapcilik@eren.com",
    "AccessTokenExpiration": 360,
    "SecurityKey": "ErenKitapcilikErenKitapcilikErenKitapcilikErenKitapcilikErenKitapcilik"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  //serilog
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/WebApi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] userEmail: {Email}, UserfirstName: {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}